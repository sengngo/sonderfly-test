<%= image_tag @post.cover_photo %>
<h1><%= @post.title %></h1>
<h2><%= @post.intro %></h2>
<p><%= @post.body %></p>


<%= link_to "Edit", edit_post_path(@post) %>
 <%= link_to 'Delete', post_path(@post), :method => :delete, :date => {:confirm => 'Are you sure? This cannot be undone'} %>
<%= link_to "Home", root_path %>


<div id="comment">
	<h2><%= comment_count=pluralize(@post.comments.count, "Comment") %></h2>
		<% @post.comments.each do |comment| %>
			<p><%= comment.user.full_name %></p>
			<p><%= comment.message %></p>

		<% end %>
</div>
<%= render "comments/form" %>

