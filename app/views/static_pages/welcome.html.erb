<div class="page_wrapper">
	<% @posts.each do |post| %>
	  <div class="post_welcome">
	  	<%= link_to (image_tag post.cover_photo), post %>
	    <h2 id="post_title"><%= link_to post.title, post_path(post) %></h2>
	    <h4><%= link_to post.intro, post %></h4>
	    <p><%= post.created_at.time.strftime("%A") %>, <%= post.created_at.strftime("%b %d, %Y") %> | By <%= post.user.full_name %>
	    <p><%= post.comments.count %> Comments</p>
			<%= post.get_upvotes.size %> Likes</p>
		  </div>
			<% end %>
</div>

